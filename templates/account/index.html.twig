{% extends 'base.html.twig' %}

{% block title %}Mon Compte - Golden Hour{% endblock %}

{% block body %}
<div class="min-h-screen bg-stone-50 py-12">
    <div class="container mx-auto px-4">
        
        {# EN-TÊTE DU PROFIL #}
        <div class="mb-12 text-center">
            <div class="inline-flex items-center justify-center h-20 w-20 rounded-full bg-gradient-to-br from-orange-200 to-rose-200 text-rose-600 font-serif font-bold text-3xl shadow-inner mb-4">
                {{ app.user.firstname|first|upper }}
            </div>
            <h1 class="text-3xl font-serif font-bold text-stone-900">
                Bonjour, {{ app.user.firstname }}
            </h1>
            <p class="text-stone-500 mt-2">Heureux de vous revoir parmi nous.</p>
            <div class="mt-4">
                <a href="{{ path('app_logout') }}" class="text-xs font-bold uppercase tracking-widest text-rose-500 hover:text-rose-700 border border-rose-200 px-4 py-2 rounded-full hover:bg-rose-50 transition">
                    Se déconnecter
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
            
            {# COLONNE 1 : INFOS PERSO #}
            <div class="lg:col-span-1">
                <div class="bg-white p-8 rounded-3xl shadow-sm border border-stone-100 sticky top-24">
                    <h2 class="text-lg font-bold text-stone-900 mb-6 flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-rose-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        Mes informations
                    </h2>
                    
                    <div class="space-y-4">
                        <div>
                            <label class="block text-xs text-stone-400 uppercase tracking-wider mb-1">Nom complet</label>
                            <p class="font-medium text-stone-800">{{ app.user.firstname }} {{ app.user.lastname }}</p>
                        </div>
                        <div>
                            <label class="block text-xs text-stone-400 uppercase tracking-wider mb-1">Email</label>
                            <p class="font-medium text-stone-800">{{ app.user.email }}</p>
                        </div>
                    </div>
                </div>
            </div>

            {# COLONNE 2 & 3 : HISTORIQUE DES COMMANDES #}
            <div class="lg:col-span-2">
                <h2 class="text-2xl font-serif font-bold text-stone-900 mb-6">Mes Commandes</h2>

                {% if app.user.orders is empty %}
                    {# CAS : PAS DE COMMANDE #}
                    <div class="bg-white p-12 rounded-3xl text-center border border-stone-100 border-dashed">
                        <div class="mx-auto h-16 w-16 bg-stone-50 rounded-full flex items-center justify-center mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-stone-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                            </svg>
                        </div>
                        <h3 class="text-lg font-medium text-stone-900">Aucune commande</h3>
                        <p class="text-stone-500 mb-6">Vous n'avez pas encore craqué pour nos produits.</p>
                        <a href="{{ path('app_home') }}" class="inline-block bg-stone-900 text-white px-6 py-3 rounded-xl font-bold text-sm hover:bg-rose-600 transition">
                            Commencer le shopping
                        </a>
                    </div>
                {% else %}
                    {# CAS : LISTE DES COMMANDES #}
                    <div class="space-y-6">
                        {# On boucle sur les commandes de l'utilisateur #}
                        {% for order in app.user.orders|reverse %}
                            <div class="bg-white p-6 rounded-2xl shadow-sm border border-stone-100 hover:border-rose-200 transition group">
                                <div class="flex flex-wrap items-center justify-between gap-4 mb-4 border-b border-stone-50 pb-4">
                                    <div>
                                        <p class="text-xs text-stone-400 uppercase tracking-widest">Référence</p>
                                        <p class="font-mono font-bold text-stone-800">{{ order.reference }}</p>
                                    </div>
                                    <div class="text-right">
                                        <p class="text-xs text-stone-400 uppercase tracking-widest">Date</p>
                                        <p class="font-medium text-stone-800">{{ order.createdAt|date('d/m/Y') }}</p>
                                    </div>
                                </div>

                                {# Détails rapides de la commande #}
                                <div class="space-y-2 mb-4">
                                    {% for detail in order.orderDetails %}
                                        <div class="flex justify-between text-sm text-stone-600">
                                            <span>{{ detail.quantity }}x {{ detail.product }}</span>
                                            <span>{{ detail.total }} €</span>
                                        </div>
                                    {% endfor %}
                                </div>

                                <div class="flex items-center justify-between pt-2">
                                    <span class="text-xl font-bold text-rose-600">{{ order.total }} €</span>
                                    
                                    {# Badge Statut #}
                                    {% if order.isPaid %}
                                        <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide">
                                            Payée
                                        </span>
                                    {% else %}
                                        <span class="bg-orange-100 text-orange-700 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide">
                                            En attente
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

        </div>
    </div>
</div>
{% endblock %}