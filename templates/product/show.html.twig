{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Golden Hour{% endblock %}

{% block body %}
    <div class="min-h-[calc(100vh-80px)] bg-stone-50 py-12 flex items-center">
        <div class="container mx-auto px-4">
            
            {# Fil d'Ariane (Retour) #}
            <a href="{{ path('app_home') }}" class="inline-flex items-center text-stone-500 hover:text-rose-600 transition mb-8 font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Retour à la boutique
            </a>

            <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-stone-100">
                <div class="grid grid-cols-1 lg:grid-cols-2">
                    
                    {# COLONNE GAUCHE : IMAGE #}
                    <div class="relative bg-stone-100 h-[500px] lg:h-auto flex items-center justify-center p-8 overflow-hidden group">
                        
                        {# Petite déco d'arrière plan #}
                        <div class="absolute inset-0 bg-gradient-to-br from-orange-100/50 to-rose-100/50 opacity-0 group-hover:opacity-100 transition duration-700"></div>

                        {% if product.image %}
                            <img src="{{ asset('uploads/' ~ product.image) }}" 
                                 alt="{{ product.name }}" 
                                 class="relative z-10 max-h-full max-w-full object-contain drop-shadow-2xl transform transition duration-700 group-hover:scale-105 group-hover:rotate-1">
                        {% else %}
                            <div class="text-stone-300">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-32 w-32" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                            </div>
                        {% endif %}
                    </div>

                    {# COLONNE DROITE : INFOS #}
                    <div class="p-8 md:p-12 flex flex-col justify-center bg-white relative">
                        
                        {# Catégorie #}
                        <div class="text-rose-500 font-bold text-sm tracking-[0.2em] uppercase mb-2">
                            {{ product.category ? product.category.name : 'Maison' }}
                        </div>

                        {# Titre #}
                        <h1 class="text-4xl md:text-5xl font-serif font-bold text-stone-900 mb-6 leading-tight">
                            {{ product.name }}
                        </h1>

                        {# Prix #}
                        <div class="text-3xl font-light text-stone-800 mb-8">
                            {{ product.price }} €
                        </div>

                        {# Description #}
                        <p class="text-stone-500 text-lg leading-relaxed mb-10 border-l-4 border-rose-200 pl-6">
                            {{ product.description }}
                        </p>

                        <div class="border-t border-stone-100 pt-8 mt-auto">
                            
                            {# --- FORMULAIRE D'AJOUT AVEC QUANTITÉ --- #}
                            <form action="{{ path('cart_add', {id: product.id}) }}" method="post" class="flex items-end gap-4">
                                
                                {# Sélecteur #}
                                <div class="w-24">
                                    <label for="quantity" class="block text-xs font-bold text-stone-500 uppercase tracking-wider mb-2">
                                        Qté.
                                    </label>
                                    <input type="number" name="qty" id="quantity" min="1" value="1" 
                                           class="w-full bg-stone-50 border border-stone-200 text-stone-900 text-center font-bold text-lg rounded-xl py-4 focus:ring-2 focus:ring-rose-500 focus:outline-none transition-all">
                                </div>

                                {# Bouton #}
                                <button type="submit" class="flex-1 bg-stone-900 text-white font-bold py-4 px-8 rounded-xl shadow-xl hover:bg-gradient-to-r hover:from-orange-500 hover:to-rose-600 hover:shadow-orange-500/20 transform hover:-translate-y-1 transition-all duration-300 flex items-center justify-center gap-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                                    </svg>
                                    <span>Ajouter au panier</span>
                                </button>
                            </form>

                            {# Infos rassurantes #}
                            <div class="mt-6 flex items-center gap-6 text-xs text-stone-400 font-medium uppercase tracking-wider">
                                <span class="flex items-center gap-1">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                    En stock
                                </span>
                                <span class="flex items-center gap-1">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                    Livraison 48h
                                </span>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}