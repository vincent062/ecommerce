{% extends 'base.html.twig' %}

{% block title %}Inscription - Sunset Shop{% endblock %}

{% block body %}
{# CHANGEMENT 1 : FOND PLUS COLORÉ ET CHALEUREUX #}
{# On utilise des tons 200/100 avec de l'opacité pour une ambiance "fin de journée d'été" #}
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-orange-200/80 via-rose-100/50 to-orange-300/60">
    <div class="max-w-md w-full space-y-8">
        
        <div class="text-center">
            <h1 class="mt-6 text-4xl font-black text-transparent bg-clip-text bg-gradient-to-r from-orange-700 to-rose-700 drop-shadow-sm">
                Rejoignez-nous
            </h1>
            <p class="mt-2 text-stone-700 font-medium text-lg">
                Votre espace cocooning vous attend
            </p>
        </div>

        {# CHANGEMENT 2 : OMBRE TRÈS PRONONCÉE ET COLORÉE #}
        {# C'est une double ombre orange pour un effet de flottement intense #}
        <div class="bg-white py-8 px-4 rounded-[2rem] sm:px-10 border border-orange-100/50 shadow-[0_20px_40px_-15px_rgba(249,115,22,0.3),_0_40px_100px_-20px_rgba(249,115,22,0.2)] relative z-10">
            
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="mb-4 p-4 rounded-xl bg-rose-50 text-rose-600 text-sm font-bold border border-rose-100" role="alert">{{ flash_error }}</div>
            {% endfor %}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-5'}}) }}
                
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        {{ form_label(registrationForm.firstname, null, {'label_attr': {'class': 'block text-sm font-bold text-stone-700 mb-1 pl-2'}}) }}
                        {{ form_widget(registrationForm.firstname, {'attr': {'class': 'w-full p-4 rounded-2xl border-orange-50 bg-orange-50/50 focus:bg-white focus:border-orange-400 focus:ring-4 focus:ring-orange-200/50 transition duration-200 outline-none font-medium'}}) }}
                        {{ form_errors(registrationForm.firstname) }}
                    </div>
                    <div>
                        {{ form_label(registrationForm.lastname, null, {'label_attr': {'class': 'block text-sm font-bold text-stone-700 mb-1 pl-2'}}) }}
                        {{ form_widget(registrationForm.lastname, {'attr': {'class': 'w-full p-4 rounded-2xl border-orange-50 bg-orange-50/50 focus:bg-white focus:border-orange-400 focus:ring-4 focus:ring-orange-200/50 transition duration-200 outline-none font-medium'}}) }}
                        {{ form_errors(registrationForm.lastname) }}
                    </div>
                </div>

                <div>
                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-bold text-stone-700 mb-1 pl-2'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full p-4 rounded-2xl border-orange-50 bg-orange-50/50 focus:bg-white focus:border-orange-400 focus:ring-4 focus:ring-orange-200/50 transition duration-200 outline-none font-medium'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div>
                    {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'block text-sm font-bold text-stone-700 mb-1 pl-2'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full p-4 rounded-2xl border-orange-50 bg-orange-50/50 focus:bg-white focus:border-orange-400 focus:ring-4 focus:ring-orange-200/50 transition duration-200 outline-none font-medium'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <div class="flex items-center mt-4 mb-6 pl-2">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'w-5 h-5 text-orange-600 border-orange-300 rounded focus:ring-orange-500 cursor-pointer'}}) }}
                    {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'ml-3 text-sm text-stone-600 select-none cursor-pointer'}}) }}
                </div>

                <div>
                    <button type="submit" class="w-full flex justify-center py-4 px-4 border border-transparent text-lg font-bold rounded-2xl text-white bg-gradient-to-r from-orange-500 to-rose-500 hover:from-orange-600 hover:to-rose-600 focus:outline-none focus:ring-4 focus:ring-orange-300 transition-all shadow-[0_10px_30px_-10px_rgba(249,115,22,0.5)] hover:shadow-[0_20px_40px_-10px_rgba(249,115,22,0.6)] transform hover:-translate-y-1">
                        S'inscrire maintenant
                    </button>
                </div>

            {{ form_end(registrationForm) }}

            <div class="mt-8 text-center border-t border-orange-100 pt-6">
                <p class="text-stone-600">
                    Déjà membre ? 
                    <a href="{{ path('app_login') }}" class="font-black text-orange-600 hover:text-rose-700 underline decoration-2 decoration-orange-300 underline-offset-4 transition">
                        Connectez-vous
                    </a>
                </p>
            </div>

        </div>
    </div>
</div>
{% endblock %}