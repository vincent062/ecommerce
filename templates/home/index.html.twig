{% extends 'base.html.twig' %}

{% block title %}Golden Hour - Bien-être & Maison{% endblock %}

{% block body %}
    {# 1. Section HERO : Ambiance Cocooning #}
    <div class="relative bg-gradient-to-br from-orange-100 via-rose-100 to-amber-100 text-stone-800 py-28 overflow-hidden shadow-sm">
        
        {# Formes d'ambiance #}
        <div class="absolute top-0 right-0 -mt-20 -mr-20 w-96 h-96 bg-orange-300 rounded-full blur-3xl opacity-30 pointer-events-none"></div>
        <div class="absolute bottom-0 left-0 -mb-20 -ml-20 w-80 h-80 bg-rose-300 rounded-full blur-3xl opacity-30 pointer-events-none"></div>

        <div class="container mx-auto px-4 text-center relative z-10">
            <span class="text-orange-600 font-bold tracking-[0.3em] uppercase text-xs mb-4 block">
                Collection Automne / Hiver
            </span>
            <h1 class="text-5xl md:text-7xl font-serif font-medium mb-6 text-stone-900 tracking-tight">
                Le temps de <span class="italic text-rose-600">s'apaiser</span>.
            </h1>
            <p class="text-xl md:text-2xl text-stone-600 mb-10 font-light max-w-2xl mx-auto leading-relaxed">
                Bougies artisanales, parfums d'intérieur et objets de décoration pour transformer votre maison en un sanctuaire.
            </p>
            
            <a href="#products" class="inline-flex items-center justify-center px-10 py-4 text-lg font-medium text-white transition-all duration-300 bg-stone-900 rounded-full hover:bg-rose-600 hover:shadow-xl hover:-translate-y-1">
                Découvrir la boutique
            </a>
        </div>
    </div>

    {# 2. Section PRODUITS #}
    <div id="products" class="bg-white min-h-screen py-20">
        <div class="container mx-auto px-4">
            
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-serif text-stone-900 mb-4">
                    Nos Essentiels
                </h2>
                <div class="w-24 h-1 bg-gradient-to-r from-orange-300 to-rose-300 mx-auto rounded-full"></div>
                <p class="text-stone-500 mt-4 max-w-md mx-auto">
                    Une sélection soignée pour éveiller vos sens et réchauffer votre intérieur.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
                
{% for product in products %}
    {# CARTE GOLDEN HOUR - EFFET PRONONCÉ #}
    <div class="group relative flex flex-col h-full perspective-1000">
        
        {# CONTENEUR IMAGE #}
        {# Ajout de : shadow colorée, bordure qui apparait, et mouvement vers le haut #}
        <div class="relative h-[450px] overflow-hidden rounded-2xl bg-stone-100 mb-6 
                    transition-all duration-500 ease-out
                    border border-stone-100 group-hover:border-orange-200
                    group-hover:shadow-[0_20px_40px_-15px_rgba(244,63,94,0.3)]
                    group-hover:-translate-y-3">
            
            {# Badge Nouveauté #}
            <div class="absolute top-4 left-4 z-10">
                <span class="bg-white/90 backdrop-blur px-3 py-1 text-xs font-bold uppercase tracking-widest text-stone-900 shadow-sm rounded-sm">
                    Nouveau
                </span>
            </div>

            {# IMAGE #}
            {# Ajout de : scale-110 (zoom plus fort) et rotate-1 (légère rotation) #}
            {% if product.image %}
                <img src="{{ asset('uploads/' ~ product.image) }}" 
                     alt="{{ product.name }}" 
                     class="w-full h-full object-cover transition-transform duration-700 ease-in-out 
                            group-hover:scale-110 group-hover:rotate-1">
            {% else %}
                <div class="w-full h-full flex items-center justify-center text-stone-300 bg-stone-50">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                </div>
            {% endif %}

            {# Overlay Dégradé (Apparaît au survol pour rendre le texte plus lisible si besoin) #}
            <div class="absolute inset-0 bg-gradient-to-t from-stone-900/40 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

            {# Bouton d'ajout rapide (Monte depuis le bas) #}
            <div class="absolute bottom-6 left-6 right-6 translate-y-8 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500 ease-out z-20 delay-75">
                <a href="{{ path('cart_add', {id: product.id}) }}" class="block w-full py-4 bg-white/95 backdrop-blur text-stone-900 text-center font-bold text-sm uppercase tracking-wider rounded-xl shadow-2xl hover:bg-stone-900 hover:text-white transition-colors">
                    Ajouter au panier
                </a>
            </div>
        </div>

        {# INFO PRODUIT #}
        <div class="text-center px-2 relative z-20">
            <div class="text-xs text-rose-500 font-bold uppercase tracking-widest mb-2 transition-colors group-hover:text-orange-500">
                {{ product.category ? product.category.name : 'Maison' }}
            </div>
            
            <h3 class="text-xl font-serif text-stone-900 mb-2 transition-all duration-300 group-hover:text-rose-600 group-hover:tracking-wide">
                <a href="{{ path('app_product_show', {id: product.id}) }}">
                    {{ product.name }}
                </a>
            </h3>
            
            <div class="h-1 w-0 bg-rose-500 mx-auto mb-3 transition-all duration-500 group-hover:w-12"></div>

            <p class="text-stone-500 text-sm line-clamp-1 mb-3 h-5 opacity-80 group-hover:opacity-100">
                {{ product.description }}
            </p>
            
            <span class="text-stone-900 font-bold text-lg bg-rose-50/50 px-3 py-1 rounded-lg group-hover:bg-rose-100 transition-colors">
                {{ product.price }} €
            </span>
        </div>
    </div>
{% else %}
    <div class="col-span-3 text-center py-20 bg-stone-50 rounded-xl border border-dashed border-stone-200">
        <p class="text-stone-500 text-lg font-serif italic">Notre collection arrive bientôt...</p>
    </div>
{% endfor %}
            </div>
        </div>
    </div>
{% endblock %}