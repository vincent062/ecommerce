{% extends 'base.html.twig' %}

{% block title %}Commande Validée - Golden Hour{% endblock %}

{% block body %}
<div class="min-h-screen bg-stone-50 flex flex-col items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    
    <div class="max-w-md w-full bg-white p-10 rounded-3xl shadow-xl border border-stone-100 text-center relative overflow-hidden">
        
        {# Confettis de fond (Effet CSS simple) #}
        <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-orange-400 via-rose-500 to-amber-500"></div>

        <div class="mx-auto flex items-center justify-center h-20 w-20 rounded-full bg-green-100 mb-6">
            <svg class="h-10 w-10 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
        </div>

        <h2 class="text-3xl font-serif font-bold text-stone-900 mb-2">Merci, {{ app.user.firstname }} !</h2>
        <p class="text-stone-500 mb-8">Votre commande a bien été enregistrée.</p>

        <div class="bg-stone-50 rounded-xl p-6 mb-8 text-left">
            <p class="text-xs text-stone-400 uppercase tracking-widest mb-1">Référence</p>
            <p class="font-mono font-bold text-stone-800 mb-4">{{ order.reference }}</p>
            
            <p class="text-xs text-stone-400 uppercase tracking-widest mb-1">Montant Total</p>
            <p class="font-bold text-2xl text-rose-600">{{ order.total }} €</p>
        </div>

        <a href="{{ path('app_home') }}" class="block w-full py-4 bg-stone-900 text-white font-bold rounded-xl shadow-lg hover:bg-stone-800 transition transform hover:-translate-y-1">
            Retourner à la boutique
        </a>
    </div>
</div>
{% endblock %}