{% extends 'base.html.twig' %}

{% block title %}Commande #{{ order.reference }} - Sunset Shop{% endblock %}

{% block body %}
<div class="bg-stone-50 min-h-screen py-12">
    <div class="container mx-auto px-4 max-w-4xl">
        
        {# Fil d'ariane / Bouton retour #}
        <a href="{{ path('app_account') }}" class="inline-flex items-center text-stone-500 hover:text-orange-600 font-bold mb-8 transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Retour à mon compte
        </a>

        <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-stone-100">
            
            {# HEADER COMMANDE #}
            <div class="bg-stone-900 p-8 text-white flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                <div>
                    <h1 class="text-2xl font-bold">Commande <span class="text-stone-400">#{{ order.reference }}</span></h1>
                    <p class="text-stone-400 text-sm mt-1">Passée le {{ order.createdAt|date('d/m/Y à H:i') }}</p>
                </div>
                
                {% if order.isPaid %}
                    <span class="bg-green-500/20 text-green-400 border border-green-500/30 px-4 py-2 rounded-full font-bold text-sm flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        Payée
                    </span>
                {% else %}
                    <span class="bg-orange-500/20 text-orange-400 border border-orange-500/30 px-4 py-2 rounded-full font-bold text-sm">
                        En attente
                    </span>
                {% endif %}
            </div>

            {# LISTE DES PRODUITS #}
            <div class="p-8">
                <h3 class="font-bold text-stone-800 text-lg mb-6 border-b border-stone-100 pb-2">Détail des articles</h3>
                
                <div class="space-y-6">
                    {% for detail in order.orderDetails %}
                        <div class="flex justify-between items-center group">
                            <div class="flex items-center gap-4">
                                {# Comme nous n'avons pas stocké l'image dans OrderDetails, on met une icône générique #}
                                <div class="w-16 h-16 bg-stone-100 rounded-xl flex items-center justify-center text-stone-400">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                                    </svg>
                                </div>
                                <div>
                                    <p class="font-bold text-stone-800 text-lg">{{ detail.product }}</p>
                                    <p class="text-stone-500 text-sm">Quantité : x{{ detail.quantity }}</p>
                                </div>
                            </div>
                            
                            <div class="text-right">
                                <p class="font-bold text-stone-900">{{ detail.total / 100 }} €</p>
                                <p class="text-xs text-stone-400">{{ detail.price / 100 }} € unitaire</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            {# FOOTER TOTAUX #}
            <div class="bg-stone-50 p-8 border-t border-stone-100">
                <div class="flex justify-between items-center mb-2">
                    <span class="text-stone-500">Sous-total</span>
                    <span class="font-bold text-stone-800">{{ order.total / 100 }} €</span>
                </div>
                <div class="flex justify-between items-center mb-6">
                    <span class="text-stone-500">Livraison</span>
                    <span class="font-bold text-green-600">Offerte</span>
                </div>
                <div class="flex justify-between items-center pt-6 border-t border-stone-200">
                    <span class="text-xl font-black text-stone-900">Total payé</span>
                    <span class="text-2xl font-black text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-rose-600">
                        {{ order.total / 100 }} €
                    </span>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}