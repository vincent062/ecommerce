{% extends 'base.html.twig' %}

{% block title %}Mon Panier - Sunset Shop{% endblock %}

{% block body %}
<div class="bg-stone-50 min-h-screen py-16">
    <div class="container mx-auto px-4 max-w-5xl">
        
        <h1 class="text-4xl font-black text-stone-900 mb-10 text-center">
            Mon Panier <span class="text-orange-500">.</span>
        </h1>

        {% if items | length > 0 %}
            <div class="flex flex-col lg:flex-row gap-10">
                
                {# LISTE DES PRODUITS #}
                <div class="lg:w-2/3">
                    <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-stone-100">
                        {% for item in items %}
                            <div class="p-6 flex flex-col sm:flex-row items-center gap-6 border-b border-stone-100 last:border-0 hover:bg-stone-50 transition duration-300">
                                
                                {# Image Produit #}
                                <div class="w-24 h-24 flex-shrink-0 bg-stone-200 rounded-xl overflow-hidden">
                                     <img src="/uploads/{{ item.product.image }}" alt="{{ item.product.name }}" class="w-full h-full object-cover">
                                </div>

                                {# Infos Produit #}
                                <div class="flex-1 text-center sm:text-left">
                                    <h3 class="font-bold text-lg text-stone-900">{{ item.product.name }}</h3>
                                    {# CORRECTION 1 : Prix unitaire divisé par 100 #}
                                    <p class="text-stone-500 text-sm">Prix unitaire : {{ item.product.price / 100 }} €</p>
                                </div>

                                {# Quantité #}
                                <div class="flex items-center gap-3 bg-stone-100 rounded-lg p-1">
                                    <a href="{{ path('cart_remove', {id: item.product.id}) }}" class="w-8 h-8 flex items-center justify-center bg-white text-stone-600 rounded-md hover:bg-rose-100 hover:text-rose-600 transition shadow-sm font-bold">-</a>
                                    <span class="font-bold text-stone-900 w-4 text-center">{{ item.quantity }}</span>
                                    <a href="{{ path('cart_add', {id: item.product.id}) }}" class="w-8 h-8 flex items-center justify-center bg-white text-stone-600 rounded-md hover:bg-green-100 hover:text-green-600 transition shadow-sm font-bold">+</a>
                                </div>

                                {# Total Ligne #}
                                <div class="font-black text-xl text-stone-900 w-24 text-right">
                                    {# CORRECTION 2 : Total ligne divisé par 100 #}
                                    {{ (item.product.price * item.quantity) / 100 }} €
                                </div>

                                {# Supprimer #}
                                <a href="{{ path('cart_delete', {id: item.product.id}) }}" class="text-stone-400 hover:text-rose-600 transition">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                    
                    <div class="mt-4 text-right">
                        <a href="{{ path('cart_delete_all') }}" class="text-sm text-rose-500 font-bold hover:underline">Vider le panier</a>
                    </div>
                </div>

                {# RÉSUMÉ COMMANDE #}
                <div class="lg:w-1/3">
                    <div class="bg-white rounded-3xl shadow-xl p-8 border border-stone-100 sticky top-24">
                        <h2 class="text-xl font-bold mb-6 text-stone-800">Résumé</h2>
                        
                        <div class="flex justify-between items-center mb-4 text-stone-600">
                            <span>Sous-total</span>
                            {# CORRECTION 3 : Total global divisé par 100 #}
                            <span class="font-bold">{{ total / 100 }} €</span>
                        </div>
                        
                        <div class="flex justify-between items-center mb-6 text-stone-600">
                            <span>Livraison</span>
                            <span class="text-green-600 font-bold">Offerte</span>
                        </div>

                        <div class="border-t border-stone-100 pt-6 mb-8 flex justify-between items-center">
                            <span class="text-xl font-black text-stone-900">Total</span>
                            {# CORRECTION 4 : Total global divisé par 100 (encore) #}
                            <span class="text-3xl font-black text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-rose-600">
                                {{ total / 100 }} €
                            </span>
                        </div>

                        {# IMPORTANT : On pointe vers la nouvelle route de récapitulatif #}
                        <a href="{{ path('order_create') }}" class="block w-full py-4 bg-stone-900 text-white text-center font-bold rounded-xl hover:bg-orange-600 transition shadow-lg hover:shadow-orange-500/30 transform hover:scale-[1.02]">
                            Passer au paiement
                        </a>
                        
                        <p class="text-center text-xs text-stone-400 mt-4">Paiement 100% sécurisé</p>
                    </div>
                </div>

            </div>
        {% else %}
            {# PANIER VIDE #}
            <div class="text-center py-20">
                <div class="w-24 h-24 bg-stone-100 rounded-full flex items-center justify-center mx-auto mb-6 text-stone-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                </div>
                <h2 class="text-2xl font-bold text-stone-800 mb-2">Votre panier est vide</h2>
                <p class="text-stone-500 mb-8">On dirait que vous n'avez pas encore trouvé votre bonheur.</p>
                <a href="{{ path('app_home') }}" class="inline-block px-8 py-3 bg-stone-900 text-white rounded-xl font-bold hover:bg-orange-600 transition">
                    Continuer mes achats
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}