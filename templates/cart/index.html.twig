{% extends 'base.html.twig' %}

{% block title %}Mon Panier - Sunset Shop{% endblock %}

{% block body %}
    <div class="bg-stone-50 min-h-screen py-16">
        <div class="container mx-auto px-4">
            
            <h1 class="text-4xl font-black text-stone-900 mb-10 text-center">
                Votre Panier <span class="text-orange-500">.</span>
            </h1>

            {% if items | length > 0 %}
                <div class="flex flex-col lg:flex-row gap-10">
                    
                    {# LISTE DES PRODUITS #}
                    <div class="lg:w-2/3">
                        <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-stone-100">
                            {% for item in items %}
                                <div class="flex items-center p-6 border-b border-stone-100 last:border-0 hover:bg-stone-50 transition duration-300">
                                    
                                    {# Image #}
                                    <div class="w-24 h-24 flex-shrink-0 rounded-xl overflow-hidden bg-stone-100 border border-stone-200">
                                        {% if item.product.image %}
                                            <img src="{{ asset('uploads/' ~ item.product.image) }}" alt="{{ item.product.name }}" class="w-full h-full object-cover">
                                        {% else %}
                                            <div class="flex items-center justify-center h-full text-stone-300">Image?</div>
                                        {% endif %}
                                    </div>

                                    {# Détails #}
                                    <div class="ml-6 flex-grow">
                                        <h3 class="font-bold text-stone-800 text-lg">{{ item.product.name }}</h3>
                                        <p class="text-sm text-stone-500">Quantité : {{ item.quantity }}</p>
                                    </div>

                                    {# Prix #}
                                    <div class="text-right mx-6">
                                        <span class="block font-bold text-stone-900 text-xl">
                                            {{ item.product.price * item.quantity }} €
                                        </span>
                                        <span class="text-xs text-stone-400">{{ item.product.price }} € / unité</span>
                                    </div>

                                    {# Supprimer #}
                                    <a href="{{ path('cart_remove', {id: item.product.id}) }}" class="p-2 text-stone-400 hover:text-rose-600 transition duration-300 bg-stone-100 hover:bg-rose-50 rounded-lg">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </a>
                                </div>
                            {% endfor %}
                        </div>
                        
                        <div class="mt-6 text-left">
                            <a href="{{ path('app_home') }}" class="text-stone-500 hover:text-orange-600 font-bold text-sm inline-flex items-center transition">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                                </svg>
                                Continuer mes achats
                            </a>
                        </div>
                    </div>

                    {# RÉSUMÉ COMMANDE (Sidebar) #}
                    <div class="lg:w-1/3">
                        <div class="bg-stone-900 rounded-3xl p-8 text-white shadow-2xl sticky top-8 relative overflow-hidden group">
                             {# Petit Glow #}
                             <div class="absolute -top-10 -right-10 w-40 h-40 bg-gradient-to-br from-orange-500 to-purple-600 rounded-full blur-3xl opacity-30"></div>

                            <h2 class="text-2xl font-bold mb-6">Total</h2>
                            
                            <div class="flex justify-between mb-4 text-stone-400">
                                <span>Sous-total</span>
                                <span>{{ total }} €</span>
                            </div>
                            <div class="flex justify-between mb-8 pb-8 border-b border-stone-800 text-stone-400">
                                <span>Livraison</span>
                                <span>Offerte</span>
                            </div>

                            <div class="flex justify-between mb-8 text-2xl font-bold">
                                <span>Total TTC</span>
                                <span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-rose-500">{{ total }} €</span>
                            </div>

                            <a href="#" class="block w-full py-4 bg-gradient-to-r from-orange-500 to-rose-600 rounded-xl text-center font-bold text-white shadow-lg hover:shadow-orange-500/40 hover:scale-105 transition duration-300">
                                Passer au paiement
                            </a>
                        </div>
                    </div>

                </div>
            {% else %}
                {# PANIER VIDE #}
                <div class="text-center py-20 bg-white rounded-3xl shadow-xl border border-stone-100">
                    <div class="w-24 h-24 bg-stone-100 rounded-full flex items-center justify-center mx-auto mb-6 text-stone-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-stone-900 mb-4">Votre panier est vide</h2>
                    <p class="text-stone-500 mb-8">Il semblerait que vous n'ayez pas encore craqué !</p>
                    <a href="{{ path('app_home') }}" class="px-8 py-3 bg-stone-900 text-white rounded-xl font-bold hover:bg-orange-600 transition duration-300">
                        Découvrir nos produits
                    </a>
                </div>
            {% endif %}

        </div>
    </div>
{% endblock %}